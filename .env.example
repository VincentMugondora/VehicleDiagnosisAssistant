# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=vehicle_diag

# Reply formatting
REPLY_MAX_CAUSES=5
REPLY_MAX_CHECKS=5

# Usage limits (for free tier/pilot)
USAGE_LIMIT_PER_NUMBER=20
USAGE_LIMIT_WINDOW_DAYS=30
ALLOWED_NUMBERS=whatsapp:+263,whatsapp:+5678

# AI (optional)
AI_PROVIDER=gemini
AI_ENRICH_ENABLED=false
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# External internet fallback (optional)
INTERNET_FALLBACK_ENABLED=true
# Pick one search provider: brave | serpapi
SEARCH_PROVIDER=brave
BRAVE_API_KEY=
SERPAPI_KEY=
# Comma-separated list of trusted domains to use for OBD info
TRUSTED_SITES=obd-codes.com,autocodes.com,obdii.com
# Cache TTL in seconds for external_obd_cache (default 30 days)
EXTERNAL_CACHE_TTL_SECONDS=2592000
# Always merge external causes/checks even if DB has entries
EXTERNAL_ENRICH_ALWAYS=true
